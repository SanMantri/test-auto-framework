<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!--
    TestNG Suite Configuration - Simplified for reliable test discovery
-->
<suite name="AutomationSuite" parallel="methods" thread-count="3" verbose="2">

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
    </listeners>

    <!-- All Tests - Explicitly listed classes for reliable discovery -->
    <test name="AllTests" parallel="methods" thread-count="3">
        <classes>
            <class name="com.company.automation.tests.payment.PaymentTests"/>
            <class name="com.company.automation.tests.booking.BookingTests"/>
            <class name="com.company.automation.tests.dashboard.DashboardTests"/>
        </classes>
    </test>

</suite>
